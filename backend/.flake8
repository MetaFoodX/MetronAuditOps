[flake8]
max-line-length = 160
extend-ignore = E203,W503,F401,F841,E501,E402,F403,F405,E722,E731,F541,F811,C901
exclude =
    .git,
    __pycache__,
    .venv,
    venv,
    env,
    build,
    dist,
    .eggs,
    *.egg,
    .mypy_cache,
    .pytest_cache,
    .tox,
    htmlcov,
    coverage.xml,
    .coverage
per-file-ignores =
    __init__.py:F401
    tests/*:S101,S105,S106,S107,S603,S607
max-complexity = 80
